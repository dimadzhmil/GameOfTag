<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- For Horizontal LinearLayout in Portrait mode -->
    <style name="VerticalLinearLayout">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- For TextView(Cells) in portrait mode -->
    <style name="PortraitCells">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@android:color/holo_blue_bright</item>
        <item name="android:text">@string/commoncell</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/activity_portrait_cell_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:onClick">moveTextView</item>
    </style>

    <!-- For TextView(Cells) in landscape mode -->
    <style name="LandscapeCells" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@android:color/holo_blue_bright</item>
        <item name="android:text">@string/commoncell</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/activity_landscape_cell_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:onClick">moveTextView</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
